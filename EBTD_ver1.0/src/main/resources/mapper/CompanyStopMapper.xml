<?xml version="1.0" encoding="UTF-8"?>
<!-- StopDAO 전용 Mapper : 정류장 관련 sql문 명시 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ebtd.www.dao.I_CompanyStopDao">

 	<select id="getStopList" resultType="stop" > <!-- 정류장 리스트 조회 -->
		SELECT * FROM STOP
	</select>
  
  	<insert id="addNewStop" parameterType="stop"> 정류장 신청
		INSERT INTO STOP
		VALUES(#{s_no},#{t_name},#{s_name},#{s_x},#{s_y},#{s_detail})
	</insert> 
	
</mapper>
