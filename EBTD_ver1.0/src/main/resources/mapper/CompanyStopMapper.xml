<?xml version="1.0" encoding="UTF-8"?>
<!-- StopDAO 전용 Mapper : 정류장 관련 sql문 명시 -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ebtd.www.dao.I_CompanyStopDao">
	
	<!-- 정류장 리스트 조회 -->
 	<select id="getStopList" resultType="stop" > 
		SELECT * FROM STOP
	</select>
  
  	<!-- 정류장 등록 신청 -->
  	<insert id="addNewStop" parameterType="sa"> 
		INSERT INTO STOP_APPLY
		VALUES(#{sa_X},#{sa_Y},#{sa_Name},#{t_Name},#{c_UserName},#{sa_Reason},#{sa_Status},#{sa_No},DEFAULT,#{sa_Disreason})
	</insert>  
	
	<!-- 정류장 등록 내역 조회 -->
	<select id="getNewStopConfirmList" resultType="sa" > 
		SELECT * FROM STOP_APPLY
	</select>
	
	<!-- 특정 정류장 정보 검색 -->
	<select id="searchStop" resultType="stop" parameterType="String"> 
	SELECT * FROM STOP WHERE S_NAME LIKE '%'||#{S_NAME}||'%'
	</select> 
</mapper>
